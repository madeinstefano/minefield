#lose-badge { background-image: url( asset_path( 'images/lose.svg') ); }
#win-badge { background-image: url( asset_path( 'images/win.svg') ); }

#game-results {
  width: 100%;
  border-collapse: collapse;
}
#game-results tr td:last-child {
