}

#lollipop-popup {
  .button, button {
    display: inline-block;
    height: 40px;
    line-height: 40px;
    font-size: 1rem;
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    cursor: pointer;
    color: #fff;
    background-color: transparent;
    padding: 0 15px;
    border-radius: 6px;
    border:none;
    position: relative;

    ^[1]:hover::after {
      position: absolute;
      border: 1px solid #E37900;
      content: '';
      top: -1px;
      left: -1px;
      right: -1px;
      bottom: -1px;
      background-color: rgba(227, 121, 0, .3);
      box-shadow: 0 0 6px #e37900;
    }

    ^[1]:not(:last-child) {
      margin-right: 12px;
    }
  }
}

