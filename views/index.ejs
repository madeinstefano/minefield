<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <!-- chrome -->
      <meta name="theme-color" content="#1a1a1a">

      <!-- Windows Phone -->
      <meta name="msapplication-navbutton-color" content="#1a1a1a">

      <!-- iOS Safari -->
      <meta name="apple-mobile-web-app-capable" content="yes">
      <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

      <title>Minefield v1.2.0</title>

      <link rel="icon" href="<%= assetPath('favicon.ico') %>">
      <!-- chrome -->
      <link rel="icon" sizes="192x192" href="<%= assetPath('favicon.ico') %>">
      <!-- iOS Safari -->
      <!-- trocar por logo -->
      <link rel="apple-touch-startup-image" href="<%= assetPath('favicon.ico') %>">

      <%- css('application') -%>
    </head>
    <body>
      <header id="top-bar">
        <div id="logo" ></div>
        <div id="left-controls" style="display:none">
          <a href="#" class="button" data-function="new-game">New Game</a>
          <a href="#" class="button" data-function="restart">Restart</a>
          <a href="#" class="button" data-function="pause">Pause</a>
        </div>
        <div id="right-controls" style="display:none">
          <a href="#" class="counter" id="bomb"></a>
          <a href="#" class="counter" id="mute"></a>
          <span class="counter" id="flags-counter">0</span>
          <span class="counter" id="timer">0:00:00</span>
        </div>
      </header>

      <div id="bg-wrapper"></div>

      <div id="start-wrapper">
        <a href="#" data-function="start">- Click here to start -</a>
      </div>

      <div id="field-wrapper"></div>

      <footer>
        <small>Developed by St√©fano Zanata @ <a href="http://szanata.com" target="_blank">szanata.com</a> 2014 v1.2</small>
      </footer>

      <%- js('application') -%>

      <!-- preload -->
      <div style="width:0;height:0;overflow:hidden">
        <img alt="marked" src="<%= assetPath( 'images/marked.svg' ) %>" width="480" height="480" />
        <img alt="doubt" src="<%= assetPath( 'images/doubt.svg' ) %>" width="480" height="480" />
        <img alt="mine" src="<%= assetPath( 'images/mine.svg' ) %>" width="480" height="480" />
        <img alt="kids-play" src="<%= assetPath( 'images/kids-play.svg' ) %>" width="1200" height="1200" />
        <img alt="medium" src="<%= assetPath( 'images/medium.svg' ) %>" width="1200" height="1200" />
        <img alt="insane" src="<%= assetPath( 'images/insane.svg' ) %>" width="1200" height="1200" />
        <img alt="custom" src="<%= assetPath( 'images/custom.svg' ) %>" width="1200" height="1200" />
        <img alt="win" src="<%= assetPath( 'images/win.svg' ) %>" width="1200" height="1200" />
        <img alt="lose" src="<%= assetPath( 'images/lose.svg' ) %>" width="1200" height="1200" />
        <audio src="https://s3-sa-east-1.amazonaws.com/szanata/minefield/fx/square_click.wav"></audio>
        <audio src="https://s3-sa-east-1.amazonaws.com/szanata/minefield/fx/explosion.wav"></audio>
      </div>

      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-19972060-5', 'szanata.com');
        ga('send', 'pageview');
      </script>
    </body>
</html>
